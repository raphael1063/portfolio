<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="HomeItemTextRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HomeItemTextBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HomeItemTextExtraBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/extra_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>


</resources>